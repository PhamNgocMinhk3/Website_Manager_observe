@{

    ViewBag.Title = "Đăng Nhập";
    Layout = null;
}

<!DOCTYPE html>


<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.css"
      rel="stylesheet" />
<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet" />
<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet" />


<div class="vh-100" style="background-color: #4C8FF3;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block ">
                            <img class="img-responsive img-rounded " style="margin-top:150px;width:100%;height:30%;" src="~/Image/Logo.png" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">
                                @using (Html.BeginForm("DangNhap", "User", FormMethod.Post))
                                {
                                    @Html.ValidationSummary(true)
                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                        <span class="h1 fw-bold mb-0 " style="color:dodgerblue">TDMU</span>
                                    </div>

                                    <h4 class="fw-normal mb-3 pb-3" style="letter-spacing: 2px;text-align: center;">Đăng Nhập</h4>

                                    <div class="form-outline mb-4">
                                        <input type="text" id="TenDN" name="TenDN" required class="form-control" />
                                        <label class="form-label" for="form3Example">Username</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" id="MatKhau" name="MatKhau" required class="form-control" />
                                        <label class="form-label" for="form3Example4">Password</label>
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
                                    </div>
                                    <div class="pt-1 mb-4">
                                        <a href="@Url.Action("ExternalLogin", "User")" class="btn btn-primary btn-lg btn-block" style="background-color: #dd4b39; font-size: 14px;" type="button">Đăng nhập bằng tài khoản Google </a>
                                    </div>
                                    <p style="color:red">@ViewBag.kt</p>


                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        <a href="~/User/LayLaiMatKhau" style="color: #393f81;">Forgot password?</a>
                                    </p>



                                }


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.js"></script>